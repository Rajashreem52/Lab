pipeline {
    agent any
   
    stages {
        stage ('Compile Stage') {
            steps {
                withMaven(maven: 'maven') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Authentication Stage') {
            steps {
                input("Do you want to proceed?")
            }
        }
        
        stage ('Testing Stage') {
            steps {
                withMaven(maven: 'maven') {
                    sh 'mvn test'
                }
            }
        }
        
    }
}
